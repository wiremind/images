{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "dependencies",
        "github-actions"
      ],
      "commitMessagePrefix": "ci:"
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "labels": [
        "dependencies",
        "docker"
      ],
      "commitMessagePrefix": "deps(docker):"
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "labels": [
        "dependencies",
        "versions"
      ],
      "commitMessagePrefix": "deps(versions):"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update versions in versions.yaml files",
      "managerFilePatterns": [
        "/(^|/)versions\\.yaml$/"
      ],
      "matchStrings": [
        "- \"(?<currentValue>[^\"]+)\"\\s*#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)"
      ],
      "versioningTemplate": "docker"
    }
  ]
}
